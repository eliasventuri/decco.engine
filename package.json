{
    "name": "decco-engine",
    "version": "1.1.18",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder && node scripts/post-build.js",
        "post-build": "node scripts/post-build.js",
        "release": "node scripts/publish-release.js"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "electron-log": "^5.4.3",
        "electron-updater": "^6.7.3",
        "express": "^4.18.2",
        "fluent-ffmpeg": "^2.1.3",
        "torrent-stream": "^1.2.0"
    },
    "devDependencies": {
        "electron": "^28.3.3",
        "electron-builder": "^24.13.3"
    },
    "build": {
        "appId": "com.decco.engine",
        "productName": "Decco Engine",
        "publish": [
            {
                "provider": "github",
                "owner": "eliasventuri",
                "repo": "decco.engine"
            }
        ],
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": "nsis"
        },
        "protocols": [
            {
                "name": "Decco Protocol",
                "schemes": [
                    "decco"
                ]
            }
        ],
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "perMachine": true,
            "deleteAppDataOnUninstall": true,
            "include": "build/installer.nsh"
        }
    }
}
